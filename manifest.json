{
  "manifest_version": 2,

  "name": "ahegao",
  "description": "animes",
  "version": "1.0",
  "author": "Vivek Bhookya",

  "browser_action": {
    "default_icon": "ahegao_icon.png",
    "default_popup": "index.html",
    "default_title": "ahegaoooo"
  },

  /* "icons": { "16": "icons/heart-icon-16.png",
             "48": "icons/heart-icon-48.png",
             "128": "icons/heart-icon-128.png" }, */

  "background": {
      "scripts": ["jquery.min.js", "links.js", "javascript.js"],
      "persistent": false
      },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "links.js", "javascript.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}
